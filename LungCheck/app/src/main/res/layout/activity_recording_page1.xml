<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal">

    <TextView
        android:text='Please put the stethoscope at location 0 for 10s'
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/Instructions"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/auscu0"
        android:id="@+id/auscu0"
        android:layout_marginTop="90dp" />

    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ProgressBar"
        android:layout_below="@+id/recording"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:max="100"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="START RECORDING"
        android:layout_height="wrap_content"
        android:id="@+id/recording"
        android:layout_width="300dp"
        android:layout_below="@+id/auscu0"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="NEXT LOCATION"
        android:layout_height="wrap_content"
        android:id="@+id/NextLocation"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ProgressBar" />

</RelativeLayout>
